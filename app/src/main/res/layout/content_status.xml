
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="mz.maputobustrackerModule.StatusActivity"
        tools:showIn="@layout/activity_status"
        android:background="#ffffff"
        android:weightSum="1">

        <ScrollView
            android:id="@+id/menuItens2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_weight="1.28">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linearLayout">

                    <ImageView
                        android:id="@+id/imageView"
                        android:gravity="center"
                        android:scaleType="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/itinerario"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ID:"
                    android:id="@+id/textView2"
                    android:textColor="#090909"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:background="#93d06a" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00000000"
                    android:id="@+id/txtCodImei"
                    android:textColor="#326a0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/textView4"
                    android:textSize="20dp"
                    android:layout_above="@+id/txtNomeTripulante"
                    android:textAlignment="center"
                    android:background="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Tripulante:"
                    android:id="@+id/textView7"
                    android:textColor="#090909"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:background="#93d06a" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="xyz"
                    android:id="@+id/txtNomeTripulante"
                    android:textColor="#326a0d"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_alignStart="@+id/txtCodImei"
                    android:layout_alignEnd="@+id/txtLatitude"
                    android:textSize="20dp"
                    android:layout_above="@+id/txtEmViagem"
                    android:textAlignment="center"
                    android:textIsSelectable="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Informação Sobre Viagem"
                    android:id="@+id/textView4"
                    android:textColor="#090909"
                    android:layout_below="@+id/textView10"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:background="#96da69" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Em trânsito:"
                    android:id="@+id/textView10"
                    android:textColor="#090909"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentStart="true"
                    android:background="#93d06a" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Não"
                    android:id="@+id/txtEmViagem"
                    android:textColor="#326a0d"
                    android:layout_below="@+id/textView7"
                    android:layout_alignStart="@+id/txtNomeTripulante"
                    android:textSize="20dp"
                    android:layout_above="@+id/textView4"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Autocarro Associado:"
                    android:id="@+id/textView28"
                    android:textColor="#090909"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentStart="true"
                    android:background="#93d06a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Não"
                    android:id="@+id/txtAutocarroAssociado"
                    android:textColor="#326a0d"
                    android:layout_below="@+id/textView7"
                    android:layout_alignStart="@+id/txtNomeTripulante"
                    android:textSize="20dp"
                    android:layout_above="@+id/textView4"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Latitude:"
                    android:id="@+id/textView5"
                    android:textColor="#ff0000"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentStart="true"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20.10.50"
                    android:id="@+id/txtLatitude"
                    android:textColor="#326a0d"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Longitude:"
                    android:id="@+id/textView6"
                    android:textColor="#ff0000"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="-20.10.50"
                    android:id="@+id/txtLongitude"
                    android:textColor="#326a0d"
                    android:textSize="20dp"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Velocidade:"
                    android:id="@+id/textView8"
                    android:textColor="#ff0000"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0 km/h"
                    android:id="@+id/txtVelocidade"
                    android:textColor="#326a0d"
                    android:textSize="20dp"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Proxima Paragem:"
                    android:id="@+id/textView19"
                    android:textColor="#ff0000"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sem destino"
                    android:id="@+id/txtProximaparagem"
                    android:textColor="#326a0d"
                    android:textSize="20dp"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

